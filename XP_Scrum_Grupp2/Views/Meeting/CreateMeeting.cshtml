@model XP_Scrum_Grupp2.Models.Meeting

@{
    ViewBag.Title = "CreateMeeting";
}

<h2>Create Meeting</h2>

@using (Html.BeginForm("CreateAMeeting", "Meeting", new { meeting = Model }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Start, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Start, new { @class = "form-control datepicker", @id = "datetimepicker1" })
            @Html.ValidationMessageFor(m => m.Start, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.End, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.End, new { @class = "form-control datepicker", @id = "datetimepicker2" })
            @Html.ValidationMessageFor(m => m.End, "", new { @class = "text-danger" })
        </div>
    </div>


    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({ format: 'YYYY-MM-DD HH:mm' });
            $('#datetimepicker2').datetimepicker({ format: 'YYYY-MM-DD HH:mm' });
        });
    </script>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

}
