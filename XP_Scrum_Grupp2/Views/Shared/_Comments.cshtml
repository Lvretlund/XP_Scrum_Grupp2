@model XP_Scrum_Grupp2.Models.CommentModel

@if (Model != null)
{
    foreach (var com in Model.Commentarer)
    {
        <div class="row" style="width: 100.3%; border-radius:4px; border-style: double; border-color: #b3cbff; padding: 1em;">

                <p style="margin-left: 5px; font-weight: bold; font-size: 13px;"> @com.User.Firstname @com.User.Lastname </p>
                <time class="timeago" style="margin-left: 5px; font-size: 13px; color: #9c9898; " datetime="@com.Date">@com.Date</time>
              

                <div class="commentDetails">
                    <p style="margin-top: 10px; font-size: 13px; color: #9c9898;"> @com.Text </p>
                   
                </div>
            </div>
           
     
    }
}


