@model XP_Scrum_Grupp2.Controllers.ResearchIndexViewModel


@using (Html.BeginForm("Create", "Research", new { formal = Model }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Post something below!</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Label("Text", new { htmlAttributes = new { @class = "control-label col-md-2" } })
        <br />

        @Html.EditorFor(model => model.NewResearchBlog.Text, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NewResearchBlog.Text, "", new { @class = "text-danger" })


        @Html.EditorFor(model => model.NewResearchBlog.File, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NewResearchBlog.File, "", new { @class = "text-danger" })

        <input type="file" name="upload" />
        <br />
        <input type="submit" value="Create post" class="btn btn-default" />
    </div>

    <br />
    <br />
    <hr style="height:2px;border:none;color:#333;background-color:#333;" />
    <br />


}