@model XP_Scrum_Grupp2.Controllers.PostIndexViewModel

@using (Html.BeginForm("CreatePartial", "Blog", new { formal = Model }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Post something below!</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Label("Text", new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />

    @Html.EditorFor(model => model.NewFormalBlog.Text, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.NewFormalBlog.Text, "", new { @class = "text-danger" })

    <br />
    @Html.Label("Categories", new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />

    @Html.EditorFor(model => model.NewCategory.Type, new { htmlAttributes = new { @class = "form-control", id= "txt" }, Model.SelectedCategories })
    @Html.ValidationMessageFor(model => model.NewCategory.Type, "", new { @class = "text-danger" })
    <br />
    @Html.ListBoxFor(model => model.CategoryIds, Model.SelectedCategories, new { style = "width:140px;height:170px;", @class = "ListBoxClass", id = "lbx" })
    <br />
    <br>

    @Html.EditorFor(model => model.NewFormalBlog.File, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.NewFormalBlog.File, "", new { @class = "text-danger" })

    <input type="file" name="upload" />
    <br />

    <input type="submit" value="Create post" class="btn btn-default" />


</div>

    <br />
    <br />
    <hr style="height:2px;border:none;color:#333;background-color:#333;" />
    <br />





}

@Scripts.Render("~/bundles/jqueryval")

<script>
    $("#lbx").click(function () {
        $('#txt').text("HEEEEJ");
    });
</script>